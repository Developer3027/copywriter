<div class="mt-24">
  <h1 class="font-bold text-4xl">Admin#admin</h1>
  <p>Find me in app/views/admin/admin.html.erb</p>

  <div>
    <%= form_with(model: @staff, url: admin_path) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.submit 'Create Staff Member' %>
  </div>
<% end %>
  </div>
</div>
